// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id                   String   @id @default(uuid())
  value                Int
  description          String
  method               String
  card_number          Int
  card_owner           String
  card_expiration_date DateTime
  card_cvv             Int
}

enum PayablesStatus {
  paid
  waiting_funds
}

model Payables {
  id           String         @id @default(uuid())
  paid         PayablesStatus
  payment_date DateTime
  fee          Int
}

model Balance {
  id            String @id @default(uuid())
  available     Int
  waiting_funds Int
}
